---
import { Image } from "astro:assets";
import student1 from "../img/student1.jpg";
import student2 from "../img/student2.jpg";
---

<section
	class="w-full h-[70vh] lg:h-screen flex justify-center items-center relative"
	id="home">
	<aside class="max-w-[96%] lg:max-w-[80%] flex justify-between gap-10">
		<article class="w-full h-full">
			<div class="flex items-center flex-col">
				<p
					class="text-5xl lg:text-7xl font-bold sm:text-1xl text-center">
					The Best
				</p>
				<h1
					class="text-4xl lg:text-6xl font-bold sm:text-1xl text-center">
					<strong class="important-text">remote Program</strong>
				</h1>
				<span
					class="text-5xl lg:text-7xl font-bold sm:text-1xl text-center"
					>for Students</span
				>
				<p
					class="text-xl h-auto text-pretty w-full text-center opacity-50 font-semibold max-w-[50ch] pt-5">
					As a Canadian English teacher with 30+ years, I bring
					expertise in creating engaging lessons and nurturing a love
					for English. Let's unlock your linguistic potential
					together!
				</p>
			</div>
		</article>
		<article class="w-full h-full" id="img-container">
			<div class="grid-list  items-center h-full w-full">
				<Image class="image-student" src={student1} alt="hero image" />
				<Image class="image-student" src={student2} alt="hero image" />
			</div>
		</article>
	</aside>
</section>

<style>
	@media (width < 1250px) {
		#img-container {
			display: none;
		}
	}
	.grid-list {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		grid-gap: 1rem;
		background-image: url("../img/hero-shape-2.png");
		background-repeat: no-repeat;
		background-position: center;
		background-size: contain;
	}
	.image-student {
		object-fit: cover;
		border-radius: 1rem;
		outline: 0.5rem solid #ff7b22;
		margin: 1rem;
	}
	.important-text {
		background: linear-gradient(-45deg in oklch, #f07030, blue);
		border-radius: 1rem;
		padding: 0.5rem;
		color: white;
		line-height: 8rem;
	}
	.background {
		background-color: #fafafa;
	}
</style>
