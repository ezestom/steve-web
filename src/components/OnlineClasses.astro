---
import { Image } from "astro:assets";
import { CardClasses } from "./CardClasses/CardClasses.jsx";
import check from "../icons/check.svg";
import bookImage from "../img/books2.avif";
import book from "../icons/book.svg";
import book2 from "../icons/book2.svg";
import star from "../icons/star.svg";
import stars from "../icons/stars.svg";
---

<section
	class="w-full h-full flex flex-col justify-center items-center relative mb-20"
	id="classes">
	<div class="mb-20">
		<p class="font-semibold">CATEGORIES</p>
		<h2>Online Classes <br /> <strong>For Remote Learning</strong></h2>
	</div>
	<aside
		class="md:w-[80%] sm:w-full h-auto flex flex-wrap justify-evenly gap-1">
		<div class="relative">
			<Image src={book} alt="book" class="absolute top-3 right-3 w-8" />
			<CardClasses
				client:visible
				title="Beginner"
				description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl."
				icon={check.src}
				textLink="1 Class per week"
				bookImg={bookImage.src}
				amount="5%"
				describeOffer="You will have one class per week, and you will also have a free class."
			/>
		</div>
		<div class="relative">
			<Image src={book2} alt="book" class="absolute top-3 right-3 w-8" />
			<CardClasses
				client:visible
				title="Intermediate"
				description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl."
				icon={check.src}
				textLink="2 Class per week"
				bookImg={bookImage.src}
				amount="10%"
				describeOffer="You will have two class per week, and you will also have a free class."
			/>
		</div>
		<div class="relative">
			<Image src={star} alt="star" class="absolute top-3 right-3 w-8" />
			<CardClasses
				client:visible
				title="Professional"
				description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl."
				icon={check.src}
				textLink="3 Class per week"
				bookImg={bookImage.src}
				amount="15%"
				describeOffer="You will have 3 class per week, and you will also have a free class."
			/>
		</div>
		<div class="relative">
			<Image src={stars} alt="stars" class="absolute top-3 right-3 w-8" />
			<CardClasses
				client:visible
				title="Expert"
				description="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl. Sed euismod, diam id tincidunt ultrices, nunc libero tincidunt urna, vitae aliquam nisl libero vitae nisl."
				icon={check.src}
				textLink="4 Class per week"
				bookImg={bookImage.src}
				amount="20%"
				describeOffer="You will have four class per week, and you will also have a free class."
			/>
		</div>
	</aside>
</section>

<style>
	section {
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
	}
	aside {
		display: grid;
		place-items: center;
		grid-template-columns: repeat(auto-fit, minmax(225px, 2fr));
		gap: 1rem;
		flex-wrap: wrap;
	}

	h2 {
		padding: 0;
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.75;
	}

	strong {
		background: linear-gradient(-45deg in oklch, #f07030, blue);
		border-radius: 1rem;
		padding: 0.5rem;
		color: white;
	}
	@media (width < 1250px) {
		section {
			max-width: 96%;
			margin: auto;
		}
		h2 {
			font-size: 1.75rem;
		}
	}
</style>
