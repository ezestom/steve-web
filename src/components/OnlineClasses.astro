<style>
	section {
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
	}

	h2 {
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.75;
	}

	strong {
		background: linear-gradient(-45deg in oklch, #f07030, blue);
		border-radius: 1rem;
		padding: 0.5rem;
		color: white;
	}
</style>
