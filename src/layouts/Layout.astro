interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="title" content="Astro title" />
		<meta name="description" content="Astro description" />
		<meta name="author" content="Astro author" />
		<meta name="image" content="Astro image" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/avatar-profesor.avif" />

		<title>{title}</title>
	</head>
	<body>
